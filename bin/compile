#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

echo "-----> Installing LibreOffice 6.3.4 using build directory $1"

BUILD_DIR=$1
PACKAGE="https://notarize-dev-static-assets.s3.amazonaws.com/LibreOffice_6.3.4_Linux_x86-64_deb_sdk.tar.gz"
LOCATION="$BUILD_DIR/vendor/libreoffice"

cd $BUILD_DIR
mkdir -p $LOCATION/bin
curl -L --silent $PACKAGE | tar xvf

echo "-------------extracted package-----------------"
cd LibreOffice_6.3.4_Linux_x86-64_deb_sdk/DEBS
echo "-------------moved folders-----------------"
dpkg -i *.deb
echo "-------------install debs-----------------"
